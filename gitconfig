[alias]
    br = branch
    ci = commit
    cl = clone
    co = checkout
    cp = cherry-pick
    st = status -b
    sts = status -sb
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit
    find = "!git ls-files | grep -i"
    pr = pull --rebase
    pl = pull
    rb = rebase
[apply]
    whitespace = fix
[color]
    ui = auto
[core]
    safecrlf = warn
    whitespace = space-before-tab,trailing-space
